<Page x:Class="Neckhozhin_Cursach.Windows.Frames.LoginFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Neckhozhin_Cursach.Windows.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="365" d:DesignWidth="360"
      Title="LoginFrame">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <GroupBox  Foreground="DarkGray" Header="Ваш логин" Grid.Row="1" BorderThickness="0">
            <TextBox x:Name="LoginTBx" Height="34" FontSize="20" Style="{StaticResource TextBxStyle}"/>
        </GroupBox>
        <GroupBox  Foreground="DarkGray" Header="Ваш Пароль" Grid.Row="2" BorderThickness="0">
            <PasswordBox x:Name="PasswwordPBx" Height="34" FontSize="20" Style="{StaticResource PassBxStyle}"/>
        </GroupBox>
        <Button x:Name="LogInBtn" Grid.Row="3" Click="LogInBtn_Click" Style="{StaticResource SystemButtonStyle}" Margin="15 10" Content="Войти"/>
    </Grid>
</Page>
